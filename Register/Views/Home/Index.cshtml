
@model Register.Models.RegisterModel

@{
    ViewData["Title"] = "Register";
}


<form asp-action="ValidatePassword">
 

        <!--Input fields-->
        <div class="container">
            <div class="form-input">
                <label asp-for="Username"></label>
                <input asp-for="Username" placeholder="Enter Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-input" style="margin-top:2%;">
                <label asp-for="Password"></label>
                <input asp-for="Password" placeholder="Enter Password" type="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>

                <!--Password Policy information-->
                <div class="message">
                    <span>Password Policies :</span>
                    <ul>
                        <li>
                            <span>Password Policy 1: </span>
                            <ul style="list-style-type:square">
                                <li> Minimum length of 10 characters</li>
                                <li> Should contain letters and numbers </li>
                            </ul>
                        </li>
                        <li>
                            <span>Password Policy 2: </span>
                            <ul style="list-style-type:square">
                                <li> Minimum length of 8 characters</li>
                                <li> Should not start or end with a number</li>
                                <li> Should contain upper and lower case letters</li>
                                <li> Should contain letters and numbers</li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>

            <!--div to display error message-->
            <div asp-validation-summary="ModelOnly" class="text-danger">
                <span class="padding"> Password must contain:</span>
            </div>

            <div class="">
                <button class="button" type="submit" value="Register">Register</button>
            </div>

        </div>
       
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
